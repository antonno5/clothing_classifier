ROOT="$(dirname "$(dirname "$(readlink -fn "$0")")")"
RAW_DATA_PATH="$ROOT/data/raw"
DATA_PATH="$ROOT/data/dataset"

python3 clothing_classifier/download_data.py --url zalando-research/fashionmnist --target_dir $RAW_DATA_PATH

cp $ROOT/data/raw/fashion-mnist_train.csv $ROOT/data/dataset/dataset.csv

dvc add $DATA_PATH/
dvc push
